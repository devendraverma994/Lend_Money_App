<div class="container mt-5">
  <div class="card p-4" style="max-width: 400px; margin: 0 auto;">
    <h5 class="text-center">Set Interest Rate for Loan</h5>

    <%= form_with(model: @loan, url: approve_loan_path(@loan), data: { turbo_method: :put }) do |form| %>
      <div class="form-group">
        <%= form.label :interest_rate %>
        <%= form.text_field :interest_rate, value: number_with_precision(@loan.interest_rate * 100, precision: 2), class: 'form-control' %>
      </div>

      <div class="form-group text-center mt-3">
        <%= form.submit 'Set Interest Rate', class: 'btn btn-primary btn-sm' %>
        <%= link_to 'Back', loan_path(@loan), class: 'btn btn-primary btn-sm ml-2' %>
      </div>
    <% end %>
  </div>
</div>
