<!DOCTYPE html>
<html>
  <head>
    <title>LendMoneyApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

    <%= stylesheet_link_tag "application", media: 'all', "data-turbo-track": "reload" %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
  <%= alert %>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <% if user_signed_in? %>
        <div class="container-fluid d-flex justify-content-between align-items-center">
          <div>
            <h5>Welcome, <%= current_user.username %></h5>
          </div>
          
          <div class="d-flex align-items-center">
            <p class="mb-0 mr-3">Your wallet amount: <b><%= number_to_currency(@wallet.amount, unit: 'â‚¹') %></b></p>
            <%= link_to t('navigation.log_out'), destroy_user_session_path, class: 'btn btn-outline-danger btn-sm', data: { turbo_method: :delete }, style: 'margin-left: 10px;' %>
          </div>
        </div>
      <% end %>
    </nav>

    <%= yield %>
  </body>
</html>
